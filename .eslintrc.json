{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "reportUnusedDisableDirectives": true,
  "root": true,
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "env": {
        "browser": true
      },
      "extends": ["plugin:compat/recommended"],
      "files": ["./assets/js/main.js"],
      "parserOptions": {
        "sourceType": "script"
      },
      "plugins": ["compat"],
      "rules": {
        "compat/compat": "error"
      }
    }
  ]
}
